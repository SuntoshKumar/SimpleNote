    <Button fx:id="add" style="-fx-background-radius: 50; -fx-background-color: #4FC3F7;" text="+" textFill="aliceblue" AnchorPane.bottomAnchor="8.0" AnchorPane.rightAnchor="8.0" onAction="#onAddNote">
