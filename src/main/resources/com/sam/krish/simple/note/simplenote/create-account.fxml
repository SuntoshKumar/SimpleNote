<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="root" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sam.krish.simple.note.simplenote.CreateAccountController">

    <ImageView fx:id="bgImg" fitHeight="0" fitWidth="0" pickOnBounds="true" StackPane.alignment="CENTER">
        <Image url="@login_back.png" />
    </ImageView>

    <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" StackPane.alignment="CENTER">

        <children>

            <ImageView fitHeight="200.0" fitWidth="200.0">
                <Image url="@user.png" />
            </ImageView>

            <Label layoutX="603.0" layoutY="95.0" text="Create Account" textAlignment="CENTER" wrapText="true">
                <font>
                    <Font name="Baskerville" size="58.0" />
                </font>
                <textFill>
                    <LinearGradient endX="1.0" endY="1.0">
                        <stops>
                            <Stop>
                                <color>
                                    <Color green="1.0" blue="0.7234042286872864" />
                                </color>
                            </Stop>
                            <Stop offset="1.0">
                                <color>
                                    <Color green="0.6666666865348816" blue="1.0" />
                                </color>
                            </Stop>
                        </stops>
                    </LinearGradient>
                </textFill>
            </Label>
            <TextField fx:id="username" maxWidth="400" promptText="Username" style="-fx-border-color: #4FC3F7; -fx-background-radius: 16; -fx-border-radius: 16; -fx-padding: 8;" VBox.vgrow="NEVER">
                <font>
                    <Font size="18.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="20.0" top="60.0" />
                </VBox.margin></TextField>
            <PasswordField fx:id="password" layoutX="486.0" layoutY="319.0" maxWidth="400.0" promptText="Password" style="-fx-background-radius: 16; -fx-padding: 8; -fx-border-color: #4FC3F7; -fx-border-radius: 16;">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="20.0" />
                </VBox.margin></PasswordField>

            <TextField fx:id="childhoodName" maxWidth="400" promptText="What is your childhood name?" style="-fx-border-color: #4FC3F7; -fx-background-radius: 16; -fx-border-radius: 16; -fx-padding: 8;" VBox.vgrow="NEVER">
                <font>
                    <Font size="18.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="20.0" />
                </VBox.margin></TextField>

            <HBox alignment="CENTER_RIGHT" maxWidth="400.0">

                <Button layoutX="808.0" layoutY="393.0" minWidth="100.0" mnemonicParsing="false" onAction="#onCancelAccount" style="-fx-background-radius: 16; -fx-background-color: #FF8A65;" text="Cancel">
                    <font>
                        <Font name="Baskerville" size="17.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="50.0" />
                    </VBox.margin>
               <HBox.margin>
                  <Insets right="12.0" />
               </HBox.margin></Button>

                <Button layoutX="808.0" layoutY="393.0" minWidth="120.0" mnemonicParsing="false" onAction="#onCreateAccount" style="-fx-background-radius: 16; -fx-background-color: #4FC3F7;" text="Create">
                    <font>
                        <Font name="Baskerville" size="17.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="50.0" />
                    </VBox.margin></Button>
            </HBox>
        </children>
    </VBox>

</StackPane>
